<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="@dimen/abc_action_button_min_height_material"
android:layout_width="match_parent"
android:orientation="horizontal"
android:minHeight="@dimen/abc_action_button_min_height_material"
android:maxHeight="@dimen/abc_action_button_min_height_material"
android:background="#bebebe"
android:paddingLeft="@dimen/activity_vertical_margin"
android:paddingRight="@dimen/activity_vertical_margin"
    >

<TextView
    android:id="@+id/choose_date_label"
    android:textSize="@dimen/abc_text_size_medium_material"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/abc_action_button_min_height_material"
    android:gravity="center_vertical"
    android:text="@string/choose_date_label"/>

    <Spinner
        android:id="@+id/date_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/choose_date_label"
        android:layout_toEndOf="@+id/choose_date_label" />

</RelativeLayout>